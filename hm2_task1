#include <iostream>
using namespace std;
int a, obr, start;
int perevert(int start) {
  while (start > 0) {
    a = start % 10;
    start = start / 10;
    obr = obr*10 + a;
    }
  return obr;  
}
int main() {
   cout << "Введите число" << endl;
   cin >> start;
   cout << "Перевернутое число: " << perevert(start) << endl;
}
