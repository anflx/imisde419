#include <iostream>

using namespace std;

int main() {
  int n;
  cout << "Input amount of numbers ";
  cin >> n;
  int array[n];

  cout << "Input numbers: " << endl;

  for (int i = 0; i < n; i++) {
    cin >> array[i]; 
  }

  void NewArray(int *array){
  for (int i = 0; i < n; i++) {
    for (int j = 0; j < (n - 1); j++) {
      if (array[j] > array[j + 1]) {
        int b = array[j]; 
        array[j] = array[j + 1]; 
        array[j + 1] = b; 
      }
    }
  }
 };

  cout << "New array: ";

  for (int i = 0; i < n; i++) {
    cout << array[i] << " "; 
  }
  
}
